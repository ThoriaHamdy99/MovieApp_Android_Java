<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="293dp"
        android:layout_height="57dp"
        android:layout_marginTop="132dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/android_icon" />

    <Button
        android:id="@+id/getAllMoviesBtn"
        android:layout_width="293dp"
        android:layout_height="57dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:text="Get All Movies"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/getFavouriteMoviesBtn"
        android:layout_width="293dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:text="Get Favourite Movies"
        app:layout_constraintStart_toStartOf="@+id/getAllMoviesBtn"
        app:layout_constraintTop_toBottomOf="@+id/getAllMoviesBtn" />

    <Button
        android:id="@+id/exiteBtn"
        android:layout_width="293dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:text="Exit"
        app:layout_constraintStart_toStartOf="@+id/getFavouriteMoviesBtn"
        app:layout_constraintTop_toBottomOf="@+id/getFavouriteMoviesBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>